{
  "manifest_version": 3,
  "name": "RetroWeb",
  "version": "1.0",
  "description": "A simple Chrome extension to change the CSS of websites.",
  "permissions": ["activeTab", "scripting"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    }
  }
}
